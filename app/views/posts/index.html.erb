<div class="row">
  <% @posts.each_slice(1) do |slice| %>
    <% slice.each do |post| -%>
  	<div class="col-md-4">
      <div class="well">
      	<!-- <%= !post.field('Image').blank?  ? image_tag(post.field('Image')) : '' %> -->
      	<%= cms9_field(post.field('Image')) %>
        <%= link_to post.field('Title'), post_path(post.id) %>
        <div><%= post.field('Content') %></div>
       </div>
    </div>
    <%end%>
  <% end %>
</div>
